@model List<RegistroTransaccion>
@{
    ViewData["Title"] = "Transacciones";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Lista de Transacciones</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Filtros y Botón Crear -->
        <div class="d-flex justify-content-between align-items-center pb-3">
            <!-- Contenedor de Filtros -->
            <div class="flex-grow-1 me-3">
                <form asp-action="Index" method="get" class="row g-2 align-items-center">
                    <!-- Filtro por Tipo -->
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <a asp-controller="RegistroTransaccion" asp-action="Index"
                               asp-route-empleadoId="@ViewBag.EmpleadoFiltroActivo"
                               asp-route-fechaInicio="@ViewBag.FechaInicio"
                               asp-route-fechaFin="@ViewBag.FechaFin"
                               class="btn @(ViewBag.FiltroActivo == null ? "btn-primary" : "btn-outline-primary")">
                                Todas
                            </a>
                            <a asp-controller="RegistroTransaccion" asp-action="Index"
                               asp-route-tipoFiltro="@TipoTransaccion.Ingreso"
                               asp-route-empleadoId="@ViewBag.EmpleadoFiltroActivo"
                               asp-route-fechaInicio="@ViewBag.FechaInicio"
                               asp-route-fechaFin="@ViewBag.FechaFin"
                               class="btn @(ViewBag.FiltroActivo == TipoTransaccion.Ingreso ? "btn-primary" : "btn-outline-primary")">
                                Ingresos
                            </a>
                            <a asp-controller="RegistroTransaccion" asp-action="Index"
                               asp-route-tipoFiltro="@TipoTransaccion.Deduccion"
                               asp-route-empleadoId="@ViewBag.EmpleadoFiltroActivo"
                               asp-route-fechaInicio="@ViewBag.FechaInicio"
                               asp-route-fechaFin="@ViewBag.FechaFin"
                               class="btn @(ViewBag.FiltroActivo == TipoTransaccion.Deduccion ? "btn-primary" : "btn-outline-primary")">
                                Deducciones
                            </a>
                        </div>
                    </div>

                    <!-- Filtro por Empleado -->
                    <div class="col-auto">
                        <select name="empleadoId" class="form-select"
                                asp-items="@ViewBag.EmpleadosList">
                            <option value="">-- Todos los empleados --</option>
                        </select>
                    </div>

                    <!-- Filtro por Fechas -->
                    <div class="col-auto">
                        <div class="input-group">
                            <input type="date" name="fechaInicio" class="form-control"
                                   value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")"
                                   placeholder="Fecha inicio">
                            <span class="input-group-text">a</span>
                            <input type="date" name="fechaFin" class="form-control"
                                   value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")"
                                   placeholder="Fecha fin">
                        </div>
                    </div>

                    <!-- Botón Filtrar -->
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    <!-- Mantener filtros activos -->
                    @if (ViewBag.FiltroActivo != null)
                    {
                        <input type="hidden" name="tipoFiltro" value="@ViewBag.FiltroActivo" />
                    }
                </form>
            </div>

            <!-- Botón Crear -->
            <div class="flex-shrink-0">
                <a asp-controller="RegistroTransaccion" asp-action="Crear" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Nueva Transacción
                </a>
            </div>
        </div>

        <!-- Tabla de Transacciones -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Empleado</th>
                        <th>Monto</th>
                        <th>Tipo</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var transaccion in Model)
                        {
                            <tr>
                                <td>@transaccion.Id</td>
                                <td>@transaccion.Empleado.Nombre</td>
                                <td>
                                    @if (transaccion.TipoTransaccion == TipoTransaccion.Ingreso)
                                    {
                                        <span class="text-success">+RD$@transaccion.Ingreso?.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">-RD$@transaccion.Deduccion?.ToString("N2")</span>
                                    }
                                </td>
                                <td>@transaccion.TipoTransaccion</td>
                                <td>@transaccion.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @(transaccion.Estado == "Aprobado" ? "bg-success" :
                                                     transaccion.Estado == "Iniciada" ? "bg-info" : "bg-warning")">
                                        @transaccion.Estado
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Editar" asp-route-id="@transaccion.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@transaccion.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                @if (ViewBag.FiltroActivo != null || ViewBag.EmpleadoFiltroActivo != null || ViewBag.FechaInicio != null)
                                {
                                    <div>
                                        <i class="bi bi-exclamation-circle fs-4 text-muted"></i>
                                        <p class="mt-2">No se encontraron transacciones con los filtros aplicados</p>
                                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">
                                            Limpiar filtros
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <i class="bi bi-database fs-4 text-muted"></i>
                                        <p class="mt-2">No hay transacciones registradas</p>
                                        <a asp-action="Crear" class="btn btn-sm btn-primary mt-2">
                                            <i class="bi bi-plus-circle"></i> Crear primera transacción
                                        </a>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Resumen de Filtros -->
        @if (ViewBag.FiltroActivo != null || ViewBag.EmpleadoFiltroActivo != null || ViewBag.FechaInicio != null)
        {
            <div class="mt-3">
                <small class="text-muted">
                    Filtros aplicados:
                    @if (ViewBag.FiltroActivo != null)
                    {
                        <span class="badge bg-info">Tipo: @ViewBag.FiltroActivo</span>
                    }
                    @if (ViewBag.EmpleadoFiltroActivo != null)
                    {
                        <span class="badge bg-info ms-1">
                            Empleado: @Model.FirstOrDefault()?.Empleado.Nombre
                        </span>
                    }
                    @if (ViewBag.FechaInicio != null)
                    {
                        <span class="badge bg-info ms-1">
                            Fecha: @ViewBag.FechaInicio?.ToString("dd/MM/yyyy") a @ViewBag.FechaFin?.ToString("dd/MM/yyyy")
                        </span>
                    }
                    <a asp-action="Index" class="ms-2 text-danger small">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </a>
                </small>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Establecer valores en los filtros
            var empleadoSelect = document.querySelector('select[name="empleadoId"]');
            if ('@ViewBag.EmpleadoFiltroActivo' !== '') {
                empleadoSelect.value = '@ViewBag.EmpleadoFiltroActivo';
            }

            // Resaltar filas según el tipo de transacción
            document.querySelectorAll('tbody tr').forEach(row => {
                if (row.querySelector('td:nth-child(4)').textContent.trim() === 'Ingreso') {
                    row.style.backgroundColor = 'rgba(0, 200, 0, 0.05)';
                } else {
                    row.style.backgroundColor = 'rgba(200, 0, 0, 0.05)';
                }
            });
        });
    </script>
}